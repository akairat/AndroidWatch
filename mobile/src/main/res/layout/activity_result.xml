<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.kairat.androidwatch.ResultActivity">

        <TextView android:text="-Distance-" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="18dp"
            android:gravity="center|center_vertical"
            android:layout_above="@+id/linearLayout3"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView2"
        android:layout_alignParentBottom="true"
        android:src="@drawable/backgrounmap"
        android:alpha="0.5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="-Place Name-"

            android:id="@+id/textView4"
        android:textSize="20dp"
            android:textColor="#ff5045ff"
            android:textStyle="bold"
        android:layout_marginBottom="37dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:gravity="center|center_vertical"
        android:visibility="invisible"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="-Address-"
            android:id="@+id/textView5"
            android:layout_marginBottom="32dp"
            android:layout_below="@+id/textView4"
            android:gravity="center|center_vertical"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:weightSum="1"
        android:id="@+id/linearLayout3"
        android:layout_centerVertical="true"
        android:layout_marginTop="30dp"
        android:gravity="center|center_vertical">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="22dp"
            android:id="@+id/imageView3"
            android:layout_alignTop="@+id/textView"
            android:layout_alignParentStart="true"
            android:src="@drawable/walkingman" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-Duration-"
            android:id="@+id/textView2"
            android:layout_below="@+id/textView"
            android:textSize="18dp"
            android:gravity="center_horizontal"
            android:layout_weight="0.13"
            android:visibility="invisible"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:gravity="center_horizontal"
        android:id="@+id/linearLayout2"
        android:layout_marginBottom="46dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/imageButton"
            android:layout_below="@+id/imageView"
            android:src="@drawable/yes"
            android:onClick = "startNavigation"
            android:layout_alignLeft="@+id/result" />

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:id="@+id/imageButton2"
                android:onClick = "updateChoice"
                android:src="@drawable/no"
                android:layout_below="@+id/imageView"
                android:layout_toEndOf="@+id/imageButton" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView5" />


</RelativeLayout>
