<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.kairat.androidwatch.ResultActivity">

        <TextView android:text="-Distance-" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:textSize="18dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-Duration-"
            android:id="@+id/textView2"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="-Place Name-"

            android:id="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/result"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textColor="#ff5045ff"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="-Address-"
            android:id="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView4"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:minHeight="200dp"
            android:minWidth="200dp"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="10dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:layout_below="@+id/imageView"
            android:src="@drawable/yes"
            android:onClick = "startNavigation"
            android:layout_alignLeft="@+id/result" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton2"
            android:onClick = "updateChoice"
            android:src="@drawable/no"
            android:layout_alignTop="@+id/imageButton"
            android:layout_alignRight="@+id/result"
            android:layout_alignEnd="@+id/result" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="We suggest you going..."
            android:id="@+id/result"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true" />


</RelativeLayout>
