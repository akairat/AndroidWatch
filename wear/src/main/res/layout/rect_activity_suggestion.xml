<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    tools:context="com.example.kairat.androidwatch.SuggestionActivity"
    tools:deviceIds="wear_square"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:id="@+id/layout_top1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/box">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameOfThePlace"
            android:text="Legal Seafoods"
            android:textColor="#4169E1"
            android:textSize="20dp"
            android:layout_marginTop="7dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameOfThePlace"
            android:text="0.9 mi"
            android:textSize="16dp"
            android:layout_centerHorizontal="true"
            android:textColor="#030303"
            android:gravity="center"
            android:id="@+id/distanceToPlace"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_centerHorizontal="true"
            android:text="$$$"
            android:layout_below="@+id/distanceToPlace"
            android:textSize="16dp"
            android:textColor="#030303"
            android:gravity="center"
            android:id="@+id/addressOfPlace"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/layout_top1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="5dp">
        <ImageButton
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/checkmark"
            android:scaleType="fitCenter"
            android:background="#006400"
            android:id="@+id/chooseButton"
            android:padding="4dp"
        />

        <ImageButton
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/cross"
            android:layout_toRightOf="@+id/chooseButton"
            android:scaleType="fitCenter"
            android:background="#EE0000"
            android:id="@+id/nextButton"
            android:padding="4dp"/>
    </LinearLayout>

</RelativeLayout>
